<%= form_for @user do |f| %>
  <%= f.label :full_name, t("full_name") %>
  <%= f.text_field :full_name, class: "form-control form-sign-up", placeholder: t("msg_full_name") %>

  <%= f.label :email, t("email") %>
  <%= f.email_field :email, class: "form-control form-sign-up", placeholder: t("msg_email") %>

  <%= f.label :password, t("password") %>
  <%= f.password_field :password, class: "form-control form-sign-up", placeholder: t("msg_password")  %>

  <%= f.label :password_confirmation, t("password_confirm") %>
  <%= f.password_field :password_confirmation, class: "form-control form-sign-up", placeholder: t("msg_password_confirm") %>

  <%= f.file_field :avatar %>
  <%= image_tag @user.avatar if @user.avatar? %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>

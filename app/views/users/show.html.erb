<div class="container">
  <aside class="col-md-5">
    <div class="arthor-detail-column">
      <div class="arthor-img">
        <%= image_tag @user.avatar, alt: @user.full_name if @user.avatar? %>
        <% if current_user? @user %>
          <%= link_to t("edit_profile"), edit_user_path(@user) , class: "edit-tag" %>
        <% end %>
      </div>
      <div class="user-show">
      <%= render "follow_form" %>
      <%= render "stats", object: @user %>
      </div>
    </div>
  </aside>
</div>

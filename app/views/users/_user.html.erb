<div class="col-lg-4 user-card">
  <div class="card-profile">
    <div class="card-profile_visual" id="user-avt-<%= user.id %>">
      <%= image_tag user.avatar, alt: user.full_name, class: "cover" if user.avatar? %>
    </div>

    <div class="card-profile_user-infos">
      <span class="infos_name" id="user-name-<%= user.id %>">
        <%= link_to user.full_name, user %>
      </span>
      <span class="infos_nick" id="user-email-<%= user.id %>">
        <%= user.email %>
      </span>
    </div>
    <% if current_user.is_admin? && !user.is_admin? %>
      <span id="delete-user-<%= user.id %>">
        <%= link_to t("delete"), user, method: :delete, remote: true,
          data: {confirm: t("you_sure")} %>
      </span>
    <% end %>
    <%= render "stats", object: user %>
  </div>
</div>
